# App mode (development|production)
ENVIROMENT=development

# MongoDB connection string and password (if password placeholder is used)
DATABASE=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/<dbname>
DB_PASSWORD=<db_password>

# JWT auth config
JWT_SECRET=<jwt_secret>
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Mapbox token for map rendering on the site
MAP_TOKEN=<mapbox_token>

# Mail credentials (defaults Mailtrap sandbox)
EMAIL_USERNAME=<mail_username>
EMAIL_PASSWORD=<mail_password>
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=25

# Stripe keys for checkout and payments
STRIPE_SECRET_KEY=<stripe_secret_key>
STRIPE_PUBLIC_KEY=<stripe_public_key>
